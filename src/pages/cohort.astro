---
import BaseLayout from '../layouts/BaseLayout.astro';
import CohortDashboardReal from '../components/cohort/CohortDashboardReal.astro';
import CTAButton from '../components/shared/CTAButton.astro';
---

<BaseLayout
  title="CLIF Consortium - Cohort Dashboard"
  description="Explore aggregated ICU patient data from the CLIF Consortium - 680,158 unique patients, 862,400 ICU encounters across 46 hospitals in 12 leading institutions."
>
  <div class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold text-clif-burgundy mb-4">CLIF Cohort Dashboard</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Real-time insights from 680,158 unique ICU patients across 46 hospitals and 12 leading institutions
      </p>
      <div class="mt-4 text-sm text-gray-500">
        Data span: 2011-2024 | Last updated: January 2025
      </div>
    </div>

    <!-- Real Cohort Dashboard -->
    <CohortDashboardReal />

    <!-- Call to Action -->
    <section class="text-center bg-gradient-to-r from-clif-burgundy to-clif-burgundy/80 text-white p-8 rounded-2xl shadow-xl">
      <h2 class="text-3xl font-bold mb-4">Explore CLIF Research</h2>
      <p class="text-xl mb-6 opacity-90">
        This dashboard presents real, aggregated data from our consortium. Discover how CLIF enables groundbreaking research while preserving patient privacy.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <CTAButton
          href="/tools"
          variant="outline"
          class="bg-white text-clif-burgundy hover:bg-gray-100 border-white"
          ariaLabel="Learn about CLIF tools and data access"
        >
          Explore CLIF Tools
        </CTAButton>
        <CTAButton
          href="/research"
          variant="outline"
          class="bg-transparent text-white hover:bg-white/20 border-white"
          ariaLabel="View current research projects using CLIF data"
        >
          View Research Projects
        </CTAButton>
      </div>
    </section>
  </div>
</BaseLayout>
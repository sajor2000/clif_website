---
import BaseLayout from '../layouts/BaseLayout.astro';
import CohortDashboardReal from '../components/cohort/CohortDashboardReal.astro';
import ConsortiumMapOriginal from '../components/home/ConsortiumMapOriginal.astro';
import CTAButton from '../components/shared/CTAButton.astro';
---

<BaseLayout
  title="CLIF Consortium - Cohort Dashboard"
  description="Explore aggregated ICU patient data from the CLIF Consortium - 680,158 unique patients, 862,400 ICU encounters across 46 hospitals in 12 leading institutions."
>
  <div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4 py-8 max-w-7xl">
      <!-- Enhanced Hero Section -->
      <div class="text-center mb-12 animate-fade-in">
        <h1 class="text-4xl md:text-5xl font-bold text-clif-burgundy mb-4 bg-clip-text text-transparent bg-gradient-to-r from-clif-burgundy to-clif-burgundy-dark">
          CLIF Cohort Dashboard
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto mb-6">
          Real-time insights from <span class="font-semibold text-clif-burgundy">680,158</span> unique ICU patients 
          across <span class="font-semibold text-clif-burgundy">46</span> hospitals in 
          <span class="font-semibold text-clif-burgundy">12</span> leading institutions
        </p>
        <div class="inline-flex items-center gap-6 text-sm text-gray-600 bg-white px-6 py-3 rounded-full shadow-sm">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-clif-burgundy" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zM4 8h12v8H4V8z" clip-rule="evenodd"/>
            </svg>
            Data span: 2011-2024
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Last updated: January 2025
          </span>
        </div>
      </div>

      <!-- Interactive Dashboard CTA -->
      <section class="mb-16">
        <div class="relative bg-gradient-to-r from-clif-burgundy to-clif-burgundy-dark rounded-2xl shadow-xl overflow-hidden text-white p-8 md:p-12 text-center">
          <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
          <div class="relative">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Explore the Interactive Dashboard
            </h2>
            <p class="text-lg md:text-xl max-w-3xl mx-auto mb-6 opacity-90">
              Dive into the CLIF cohort data with our live, interactive dashboard. Filter, analyze, and visualize data from over 680,000 ICU patients in real-time.
            </p>
            <p class="text-sm opacity-75 mb-8">
              <svg class="w-4 h-4 inline mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"/>
                <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"/>
              </svg>
              Opens in a new window - Powered by R Shiny
            </p>
            <CTAButton
              href="https://clif-consortium.shinyapps.io/clif-cohort-dashboard/"
              ariaLabel="Launch the interactive CLIF Cohort Dashboard"
              class="bg-white text-clif-burgundy hover:bg-gray-100 transform hover:scale-105 transition-transform duration-200"
              size="large"
              external={true}
            >
              Launch Interactive Dashboard
            </CTAButton>

          </div>
        </div>
      </section>

      <!-- Enhanced Consortium Map Section -->
      <section class="mb-16 scroll-section">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-800 mb-3">Participating Institutions</h2>
          <p class="text-lg text-gray-600">Geographic distribution of CLIF Consortium members</p>
        </div>
        <div class="glass rounded-2xl p-4 shadow-xl hover:shadow-2xl transition-shadow duration-300">
          <ConsortiumMapOriginal />
        </div>
      </section>

      <!-- Static Summary Dashboard -->
      <section class="mb-16">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-800 mb-3">Summary Statistics</h2>
          <p class="text-lg text-gray-600">Overview of the CLIF consortium cohort characteristics</p>
        </div>
        <CohortDashboardReal />
      </section>
      
      <!-- Interactive Dashboard Features -->
      <section class="mb-16 bg-gray-50 rounded-2xl p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Interactive Dashboard Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <div class="w-12 h-12 bg-clif-burgundy/10 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-clif-burgundy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">Advanced Filtering</h3>
            <p class="text-gray-600">Filter cohorts by demographics, diagnosis, outcomes, and time periods</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <div class="w-12 h-12 bg-clif-burgundy/10 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-clif-burgundy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" />
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">Real-time Visualization</h3>
            <p class="text-gray-600">Interactive charts and graphs that update as you filter the data</p>
          </div>
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <div class="w-12 h-12 bg-clif-burgundy/10 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-clif-burgundy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
            </div>
            <h3 class="font-semibold text-lg mb-2">Export Capabilities</h3>
            <p class="text-gray-600">Download filtered cohort summaries and visualizations for your research</p>
          </div>
        </div>
        <div class="text-center mt-8">
          <CTAButton
            href="https://clif-consortium.shinyapps.io/clif-cohort-dashboard/"
            variant="primary"
            size="large"
            external={true}
            ariaLabel="Access the full interactive dashboard"
            class="transform hover:scale-105 transition-transform duration-200"
          >
            Access Full Interactive Dashboard
          </CTAButton>
        </div>
      </section>

      <!-- Enhanced Call to Action -->
      <section class="relative overflow-hidden rounded-3xl">
        <div class="absolute inset-0 bg-gradient-to-br from-clif-burgundy via-clif-burgundy-dark to-clif-burgundy-darker opacity-90"></div>
        <div class="relative text-center text-white p-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Explore CLIF Research</h2>
          <p class="text-lg md:text-xl mb-8 opacity-90 max-w-3xl mx-auto">
            This dashboard presents real, aggregated data from our consortium. Discover how CLIF enables 
            groundbreaking research while preserving patient privacy through federated analytics.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <CTAButton
              href="/tools"
              variant="outline"
              class="bg-white text-clif-burgundy hover:bg-gray-100 border-white transform hover:scale-105 transition-all duration-200"
              ariaLabel="Learn about CLIF tools and data access"
            >
              Explore CLIF Tools
            </CTAButton>
            <CTAButton
              href="/research"
              variant="outline"
              class="bg-transparent text-white hover:bg-white/20 border-white transform hover:scale-105 transition-all duration-200"
              ariaLabel="View current research projects using CLIF data"
            >
              View Research Projects
            </CTAButton>
          </div>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTAButton from '../components/shared/CTAButton.astro';
---

<BaseLayout
  title="CLIF Cohort Dashboard"
  description="Explore the interactive CLIF cohort dashboard with real-time filtering and analysis capabilities."
  showBreadcrumbs={true}
>
  <div class="container mx-auto px-4 py-8">
    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-2">CLIF Cohort Dashboard</h1>
      <p class="text-lg text-gray-600">
        An interactive tool to explore the CLIF cohort demographics and data availability.
      </p>
    </div>

    <div class="relative w-full h-[80vh] border-2 border-gray-300 rounded-lg overflow-hidden shadow-lg">
      <iframe
        src="https://clif-consortium.shinyapps.io/clif-cohort-dashboard/"
        class="absolute top-0 left-0 w-full h-full border-0"
        title="CLIF Cohort Dashboard"
        allowfullscreen
      ></iframe>
    </div>
    
    <div class="mt-8 flex justify-center items-center gap-4">
      <CTAButton href="/cohort" variant="secondary" ariaLabel="Return to the cohort page">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.707-10.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L9.414 11H13a1 1 0 100-2H9.414l1.293-1.293z" clip-rule="evenodd" />
        </svg>
        Exit Dashboard
      </CTAButton>
      <CTAButton
        href="https://clif-consortium.shinyapps.io/clif-cohort-dashboard/"
        external={true}
        variant="primary"
        ariaLabel="Open the dashboard in a new browser tab"
      >
        Open in New Tab
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
          <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
        </svg>
      </CTAButton>
    </div>
  </div>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import Badge from '../components/Badge.astro';
import CTAButton from '../components/shared/CTAButton.astro';
---

<BaseLayout
  title="CLIF Data Dictionary"
  description="Access the Common Longitudinal ICU data Format (CLIF) data dictionary versions and documentation"
>
  <div class="container mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold text-clif-burgundy mb-8">CLIF Data Dictionary</h1>

    <div class="prose prose-lg max-w-none mb-12">
      <p class="text-xl">
        The CLIF Data Dictionary provides comprehensive documentation for implementing the Common
        Longitudinal ICU data Format. Select your version below to access detailed table
        structures, field definitions, and implementation guidelines.
      </p>
    </div>

    <!-- Current Version -->
    <section class="mb-12">
      <div class="glass-dark text-white p-8 rounded-2xl shadow-xl mb-8 glow">
        <h2 class="text-3xl font-bold mb-4 flex items-center">
          Current Version: CLIF 2.0.0
          <Badge type="beta" class="ml-3" />
        </h2>
        <p class="text-lg mb-6">
          The latest stable release of CLIF, featuring standardized tables for critical care data
          across multiple institutions. This version includes Beta tables ready for production use
          and Concept tables under active development.
        </p>
        <div class="flex flex-wrap gap-4">
          <CTAButton
            href="/data-dictionary/data-dictionary-2.0.0"
            ariaLabel="View CLIF 2.0.0 Data Dictionary"
          >
            View CLIF 2.0.0 Documentation
          </CTAButton>
          <CTAButton
            href="/mCIDE"
            variant="secondary"
            ariaLabel="Learn about minimum Common ICU Data Elements"
          >
            Learn about mCIDE
          </CTAButton>
          <CTAButton
            href="https://github.com/Common-Longitudinal-ICU-data-Format/CLIF/tree/main/mCIDE"
            variant="outline"
            external={true}
            ariaLabel="View mCIDE repository on GitHub"
          >
            mCIDE on GitHub
          </CTAButton>
        </div>
      </div>

    </section>

    <!-- Other Versions -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">Other Versions</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Version 2.1.0 -->
        <div class="card-modern p-6">
          <h3 class="text-xl font-semibold mb-2 flex items-center">
            CLIF 2.1.0
            <Badge type="concept" class="ml-2" size="small" />
          </h3>
          <p class="text-gray-600 mb-4">
            Upcoming release with additional concept tables and refinements based on consortium
            feedback.
          </p>
          <CTAButton
            href="/data-dictionary/data-dictionary-2.1.0"
            size="small"
            ariaLabel="View CLIF 2.1.0 preview documentation"
          >
            View Preview
          </CTAButton>
        </div>

        <!-- Version 1.0.0 -->
        <div class="card-modern p-6 opacity-75">
          <h3 class="text-xl font-semibold mb-2 flex items-center">
            CLIF 1.0.0
            <Badge type="deprecated" class="ml-2" size="small" />
          </h3>
          <p class="text-gray-600 mb-4">
            Original CLIF specification. This version is deprecated and should not be used for new
            implementations.
          </p>
          <CTAButton
            href="/data-dictionary/data-dictionary-1.0.0"
            size="small"
            variant="secondary"
            ariaLabel="View deprecated CLIF 1.0.0 documentation"
          >
            View Archive
          </CTAButton>
        </div>
      </div>
    </section>

    <!-- Quick Links -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">Quick Links</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a
          href="/data-dictionary/change-log"
          class="card-modern p-6 hover:shadow-lg transition-shadow"
        >
          <h3 class="text-lg font-semibold mb-2">Change Log</h3>
          <p class="text-gray-600">View version history and migration guides</p>
        </a>
        <a
          href="https://chatgpt.com/g/g-h1nk6d3eR-clif-assistant"
          target="_blank"
          rel="noopener noreferrer"
          class="card-modern p-6 hover:shadow-lg transition-shadow"
        >
          <h3 class="text-lg font-semibold mb-2">CLIF Assistant</h3>
          <p class="text-gray-600">Get AI-powered help with CLIF implementation</p>
        </a>
        <a href="/tools" class="card-modern p-6 hover:shadow-lg transition-shadow">
          <h3 class="text-lg font-semibold mb-2">CLIF Tools</h3>
          <p class="text-gray-600">Access validators, ETL tools, and more</p>
        </a>
      </div>
    </section>

    <!-- Help Section -->
    <section class="bg-gradient-to-r from-clif-burgundy to-clif-burgundy-dark text-white p-8 rounded-xl">
      <h2 class="text-2xl font-bold mb-4">Need Implementation Support?</h2>
      <p class="mb-6">
        Join our consortium to get access to implementation guides, best practices, and direct
        support from CLIF experts.
      </p>
      <div class="flex flex-wrap gap-4">
        <CTAButton
          href="/mission"
          variant="secondary"
          ariaLabel="Learn about joining the CLIF Consortium"
        >
          Learn About Membership
        </CTAButton>
        <CTAButton
          href="mailto:clif_consortium@uchicago.edu"
          variant="secondary"
          ariaLabel="Contact CLIF Consortium support"
        >
          Contact Support
        </CTAButton>
      </div>
    </section>
  </div>
</BaseLayout>
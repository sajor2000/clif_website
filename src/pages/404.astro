---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found - CLIF Consortium">
  <div class="container mx-auto px-4 py-16 text-center">
    <div class="max-w-2xl mx-auto">
      <!-- 404 Icon -->
      <div class="mb-8">
        <svg
          class="w-32 h-32 mx-auto text-clif-burgundy opacity-50"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
      </div>

      <!-- Error Message -->
      <h1 class="text-6xl font-bold text-clif-burgundy mb-4">404</h1>
      <h2 class="text-2xl font-semibold mb-4">Page Not Found</h2>
      <p class="text-lg text-gray-600 mb-8">
        Sorry, we couldn't find the page you're looking for. The page may have been moved, deleted,
        or the URL might be incorrect.
      </p>

      <!-- Helpful Links -->
      <div class="space-y-4">
        <h3 class="text-lg font-semibold">Here are some helpful links:</h3>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/"
            class="bg-clif-burgundy hover:bg-clif-burgundy-dark text-white font-medium py-2 px-6 rounded transition-colors"
          >
            Go to Homepage
          </a>
          <a
            href="/data-dictionary"
            class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-6 rounded transition-colors"
          >
            Data Dictionary
          </a>
          <a
            href="/team"
            class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-6 rounded transition-colors"
          >
            Our Team
          </a>
        </div>
      </div>

      <!-- Search Suggestion -->
      <div class="mt-12 p-6 bg-gray-50 rounded-lg">
        <p class="text-gray-700">
          If you believe this is an error, please contact us through our
          <a href="/team" class="text-clif-burgundy hover:underline">team page</a>.
        </p>
      </div>
    </div>
  </div>

  <style>
    /* Add a subtle animation to the icon */
    @keyframes float {
      0%,
      100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    svg {
      animation: float 3s ease-in-out infinite;
    }
  </style>
</BaseLayout>

---
import BaseLayout from '../layouts/BaseLayout.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
import FeatureCard from '../components/shared/FeatureCard.astro';
import CTAButton from '../components/shared/CTAButton.astro';
---

<BaseLayout
  title="CLIF Consortium - Mission"
  description="The CLIF Consortium's mission is to promote transparency, interoperability, and innovation in critical care data science through a comprehensive ecosystem of essential data elements."
>
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <OptimizedImage
        src="/images/clif_logo.png"
        alt="CLIF Logo"
        class="mx-auto mb-6 h-24 w-24 opacity-90"
        width={96}
        height={96}
        loading="eager"
      />
      <h1 class="text-5xl font-bold text-clif-burgundy mb-4">Our Mission & Vision</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Building the future of critical care data science through collaboration, innovation, and
        integrity
      </p>
    </div>

    <!-- Mission Section -->
    <section id="mission" class="mb-16">
      <div
        class="bg-gradient-to-r from-clif-burgundy to-clif-burgundy-dark text-white p-8 rounded-2xl shadow-xl"
      >
        <div class="flex items-center mb-4">
          <div class="bg-white/20 p-3 rounded-lg mr-4">
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path>
              <path
                fill-rule="evenodd"
                d="M4 5a2 2 0 012-2 1 1 0 000 2H6a2 2 0 00-2 2v6a2 2 0 002 2h2a1 1 0 100 2H6a4 4 0 01-4-4V5z"
              ></path>
              <path d="M11 18a1 1 0 100-2 1 1 0 000 2zm3-1a1 1 0 10-2 0 1 1 0 002 0z"></path>
              <path
                fill-rule="evenodd"
                d="M14 5a2 2 0 00-2-2 1 1 0 100 2h-2a2 2 0 00-2 2v6a2 2 0 002 2h2a1 1 0 100 2h-2a4 4 0 01-4-4V5z"
              ></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold">Our Mission</h2>
        </div>
        <p class="text-xl leading-relaxed">
          Promote transparency, interoperability, and innovation in critical care data science by
          developing a consistent and comprehensive ecosystem of essential data elements that
          describe critical illness.
        </p>
      </div>
    </section>

    <!-- Vision Section -->
    <section id="vision" class="mb-16">
      <div
        class="bg-gradient-to-r from-clif-burgundy to-clif-burgundy-dark text-white p-8 rounded-2xl shadow-xl"
      >
        <div class="flex items-center mb-4">
          <div class="bg-white/20 p-3 rounded-lg mr-4">
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
              <path
                fill-rule="evenodd"
                d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
              ></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold">Our Vision</h2>
        </div>
        <p class="text-xl leading-relaxed">
          The Common Longitudinal ICU data Format (CLIF) will be adopted worldwide as a research and
          operational database format, facilitating transformative life-saving breakthroughs in
          critical care medicine.
        </p>
      </div>
    </section>

    <!-- Values Section -->
    <section id="values" class="mb-12">
      <h2 class="text-4xl font-bold mb-12 text-center text-gray-800">Our Core Values</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <FeatureCard
          title="Open Collaboration & Access"
          description="We encourage diverse researchers, clinicians, and developers to contribute to CLIF's growth through high-quality ICU data science."
          variant="bordered"
          class="border-t-4 border-green-500"
          icon='<svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/></svg>'
        />

        <FeatureCard
          title="Data Privacy & Security"
          description="Patient confidentiality is central. CLIF uses federated analysis, ensuring patient data is never transferred between sites."
          variant="bordered"
          class="border-t-4 border-clif-burgundy"
          icon='<svg class="w-8 h-8 text-clif-burgundy" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"/></svg>'
        />

        <FeatureCard
          title="Scientific Integrity"
          description="We uphold rigorous research standards and assert that mCIDE is essential for scientific integrity."
          variant="bordered"
          class="border-t-4 border-purple-500"
          icon='<svg class="w-8 h-8 text-purple-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/></svg>'
        >
          <a
            href="/mCIDE"
            class="text-clif-burgundy hover:underline font-semibold mt-2 inline-block"
            >Learn about mCIDE â†’</a
          >
        </FeatureCard>

        <FeatureCard
          title="Transparency & Reproducibility"
          description="CLIF code is publicly accessible under FAIR principles while respecting proprietary data protection."
          variant="bordered"
          class="border-t-4 border-orange-500"
          icon='<svg class="w-8 h-8 text-orange-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path d="M11 3a1 1 0 10-2 0v1a1 1 0 102 0V3zM15.657 5.757a1 1 0 00-1.414-1.414l-.707.707a1 1 0 001.414 1.414l.707-.707zM18 10a1 1 0 01-1 1h-1a1 1 0 110-2h1a1 1 0 011 1zM5.05 6.464A1 1 0 106.464 5.05l-.707-.707a1 1 0 00-1.414 1.414l.707.707zM5 10a1 1 0 01-1 1H3a1 1 0 110-2h1a1 1 0 011 1zM8 16v-1h4v1a2 2 0 11-4 0zM12 14c.015-.34.208-.646.477-.859a4 4 0 10-4.954 0c.27.213.462.519.476.859h4.002z"/></svg>'
        />

        <FeatureCard
          title="Encouraging Partnerships"
          description="We provide open-source tools under permissive licenses to encourage global adoption."
          variant="bordered"
          class="border-t-4 border-pink-500"
          icon='<svg class="w-8 h-8 text-pink-600" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true"><path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/></svg>'
        />
      </div>
    </section>

    <!-- Call to Action -->
    <div class="bg-gray-100 rounded-2xl p-8 text-center">
      <h3 class="text-2xl font-bold mb-4">Join Our Mission</h3>
      <p class="text-lg text-gray-600 mb-6">
        Be part of the global effort to transform critical care through data science
      </p>
      <nav aria-label="Call to action links" class="flex flex-wrap justify-center gap-4">
        <CTAButton href="/team" ariaLabel="Meet the CLIF Consortium team members">
          Meet Our Team
        </CTAButton>
        <CTAButton href="/tools" variant="secondary" ariaLabel="Explore CLIF tools and resources">
          Explore Our Tools
        </CTAButton>
      </nav>
    </div>
  </div>
</BaseLayout>

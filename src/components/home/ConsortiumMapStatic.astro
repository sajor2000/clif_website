---
// Static CLIF Consortium Map matching the original site design
---

<div class="consortium-map-container">
  <div class="relative bg-gray-100 rounded-xl shadow-lg overflow-hidden">
    <!-- CLIF Logo Header -->
    <div class="absolute top-6 left-6 z-20">
      <div class="flex items-center space-x-4">
        <div class="clif-logo-map">
          <svg width="120" height="60" viewBox="0 0 200 100" class="text-clif-burgundy">
            <!-- CLIF Logo simplified for map -->
            <circle cx="50" cy="50" r="35" stroke="currentColor" stroke-width="4" fill="none"/>
            <circle cx="35" cy="35" r="8" fill="currentColor"/>
            <circle cx="65" cy="35" r="8" fill="currentColor"/>
            <circle cx="35" cy="65" r="8" fill="currentColor"/>
            <circle cx="65" cy="65" r="8" fill="currentColor"/>
            <path d="M35 50 L50 35 L65 50 L50 65 Z" stroke="currentColor" stroke-width="3" fill="none"/>
            <text x="110" y="35" class="text-2xl font-bold fill-current">CLIF</text>
          </svg>
        </div>
      </div>
    </div>

    <!-- North America Map SVG -->
    <svg viewBox="0 0 1000 600" class="w-full h-96 md:h-[500px]">
      <!-- Map Background -->
      <rect width="1000" height="600" fill="#f3f4f6"/>
      
      <!-- Simplified North America Shape -->
      <path d="M150 150 Q200 100 300 120 Q400 100 500 140 Q600 130 700 160 Q750 180 800 220 L850 250 L880 300 L850 350 L800 400 L750 450 L650 480 L550 500 L450 480 L350 460 L250 440 L180 400 L150 350 Z" 
            fill="#e5e7eb" 
            stroke="#d1d5db" 
            stroke-width="2"/>
      
      <!-- Canada -->
      <path d="M200 80 Q350 60 500 80 Q650 70 780 100 L800 140 Q750 120 650 130 Q500 110 350 120 Q250 110 200 130 Z" 
            fill="#e5e7eb" 
            stroke="#d1d5db" 
            stroke-width="2"/>
      
      <!-- Great Lakes -->
      <ellipse cx="520" cy="220" rx="40" ry="15" fill="#bfdbfe"/>
      <ellipse cx="560" cy="240" rx="25" ry="12" fill="#bfdbfe"/>
      <ellipse cx="480" cy="240" rx="20" ry="10" fill="#bfdbfe"/>
      
      <!-- Institution Markers and Logos -->
      
      <!-- West Coast -->
      <!-- UCSF -->
      <g transform="translate(120,280)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="5" class="text-sm font-semibold fill-gray-700">UCSF</text>
      </g>
      
      <!-- OHSU -->
      <g transform="translate(140,220)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="5" class="text-sm font-semibold fill-gray-700">OHSU</text>
      </g>
      
      <!-- Midwest -->
      <!-- University of Minnesota -->
      <g transform="translate(480,180)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="-10" class="text-sm font-semibold fill-gray-700">University of Minnesota</text>
      </g>
      
      <!-- Rush & UChicago & Northwestern (Chicago area) -->
      <g transform="translate(460,240)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="5" class="text-sm font-semibold fill-gray-700">Rush</text>
      </g>
      
      <g transform="translate(470,250)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="15" class="text-sm font-semibold fill-gray-700">UChicago</text>
      </g>
      
      <g transform="translate(480,235)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="-5" class="text-sm font-semibold fill-gray-700">Northwestern</text>
      </g>
      
      <!-- Michigan -->
      <g transform="translate(520,230)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="5" class="text-sm font-semibold fill-gray-700">Michigan</text>
      </g>
      
      <!-- East Coast -->
      <!-- Johns Hopkins -->
      <g transform="translate(620,280)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="-10" class="text-sm font-semibold fill-gray-700">Johns Hopkins</text>
      </g>
      
      <!-- Penn -->
      <g transform="translate(630,270)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="5" class="text-sm font-semibold fill-gray-700">Penn</text>
      </g>
      
      <!-- Southeast -->
      <!-- Emory -->
      <g transform="translate(580,340)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="5" class="text-sm font-semibold fill-gray-700">Emory</text>
      </g>
      
      <!-- Canada -->
      <!-- Toronto/Sunnybrook -->
      <g transform="translate(580,180)">
        <circle r="8" fill="#dc2626" stroke="white" stroke-width="2"/>
        <text x="15" y="-10" class="text-sm font-semibold fill-gray-700">Toronto</text>
      </g>
    </svg>
    
    <!-- Legend -->
    <div class="absolute bottom-6 left-6 bg-white/95 backdrop-blur-sm p-4 rounded-lg shadow-lg">
      <div class="space-y-2">
        <div class="flex items-center space-x-3">
          <div class="w-4 h-4 bg-red-600 rounded-full border-2 border-white"></div>
          <span class="text-sm font-medium text-gray-700">CLIF Consortium Member</span>
        </div>
        <div class="text-xs text-gray-500 mt-2">
          12 institutions • 46 hospitals • 680K+ patients
        </div>
      </div>
    </div>
    
    <!-- Statistics Overlay -->
    <div class="absolute top-6 right-6 bg-white/95 backdrop-blur-sm p-4 rounded-lg shadow-lg">
      <div class="text-center">
        <div class="text-2xl font-bold text-clif-burgundy">12</div>
        <div class="text-sm text-gray-600">Institutions</div>
      </div>
    </div>
  </div>
  
  <!-- Institution Details Grid Below Map -->
  <div class="mt-8 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
      <div class="flex items-center space-x-2">
        <div class="w-3 h-3 bg-red-600 rounded-full"></div>
        <div>
          <div class="font-semibold text-sm text-gray-800">UChicago Medicine</div>
          <div class="text-xs text-gray-500">Chicago, IL</div>
        </div>
      </div>
    </div>
    
    <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">

---
import OptimizedImage from '../OptimizedImage.astro';
---

<div class="consortium-map-original">
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <OptimizedImage
      src="/images/clif_map_original.png"
      alt="CLIF Consortium Map showing 12 participating institutions across North America"
      class="w-full h-auto"
      loading="eager"
      sizes="(max-width: 768px) 100vw, (max-width: 1200px) 90vw, 1200px"
    />
  </div>
  
  <!-- Legend Info Box -->
  <div class="mt-6 bg-gray-50 rounded-lg p-4">
    <div class="flex items-center justify-between flex-wrap gap-4">
      <div class="flex items-center space-x-6">
        <div class="flex items-center space-x-2">
          <div class="w-4 h-4 bg-red-600 rounded-full"></div>
          <span class="text-sm font-medium text-gray-700">CLIF data ready</span>
        </div>
        <div class="flex items-center space-x-2">
          <div class="w-4 h-4 bg-gray-400 rounded-full"></div>
          <span class="text-sm font-medium text-gray-700">CLIF data in progress</span>
        </div>
      </div>
      <div class="text-sm text-gray-600">
        <span class="font-semibold">12 institutions</span> â€¢ <span class="font-semibold">46 hospitals</span>
      </div>
    </div>
  </div>
</div>

<style>
  .consortium-map-original {
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
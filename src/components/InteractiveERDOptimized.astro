  function createArrow(fromEntity, toEntity, containerId) {
    const boxWidth = 250;
    const boxHeight = 120;
    
    const fromCenterX = fromEntity.position.x + boxWidth / 2;
    const fromCenterY = fromEntity.position.y + boxHeight / 2;
    const toCenterX = toEntity.position.x + boxWidth / 2;
    const toCenterY = toEntity.position.y + boxHeight / 2;

    // Calculate the direction vector
    const dx = toCenterX - fromCenterX;
    const dy = toCenterY - fromCenterY;
    const distance = Math.sqrt(dx * dx + dy * dy);
    
    // Avoid zero-length arrows
    if (distance < 10) {
      console.warn('Entities too close for arrow:', fromEntity.id, toEntity.id);
      return null;
    }
    
    // Normalize direction
    const unitX = dx / distance;
    const unitY = dy / distance;

    // Calculate connection points on box edges with proper offset
    const offset = 8; // Small offset from box edge
    let fromConnectX, fromConnectY, toConnectX, toConnectY;

    // Determine which side of the box to connect to
    if (Math.abs(unitX) > Math.abs(unitY)) {
      // Horizontal connection
      if (unitX > 0) {
        // Connect from right side of from-box to left side of to-box
        fromConnectX = fromEntity.position.x + boxWidth;
        fromConnectY = fromCenterY;
        toConnectX = toEntity.position.x - offset;
        toConnectY = toCenterY;
      } else {
        // Connect from left side of from-box to right side of to-box
        fromConnectX = fromEntity.position.x;
        fromConnectY = fromCenterY;
        toConnectX = toEntity.position.x + boxWidth + offset;
        toConnectY = toCenterY;
      }
    } else {
      // Vertical connection
      if (unitY > 0) {
        // Connect from bottom of from-box to top of to-box
        fromConnectX = fromCenterX;
        fromConnectY = fromEntity.position.y + boxHeight;
        toConnectX = toCenterX;
        toConnectY = toEntity.position.y - offset;
      } else {
        // Connect from top of from-box to bottom of to-box
        fromConnectX = fromCenterX;
        fromConnectY = fromEntity.position.y;
        toConnectX = toCenterX;
        toConnectY = toEntity.position.y + boxHeight + offset;
      }
    }

    // Create arrow group
    const group = document.createElementNS('http://www.w3.org/2000/svg', 'g');
    group.setAttribute('class', 'relationship-arrow');

    // Create line
    const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
    line.setAttribute('x1', fromConnectX);
    line.setAttribute('y1', fromConnectY);
    line.setAttribute('x2', toConnectX);
    line.setAttribute('y2', toConnectY);
    line.setAttribute('stroke', '#000000');
    line.setAttribute('stroke-width', '2');
    line.setAttribute('marker-end', `url(#arrowhead-${containerId})`);
    line.setAttribute('opacity', '0.8');

    // Add hover effect
    line.addEventListener('mouseenter', () => {
      line.setAttribute('stroke-width', '3');
      line.setAttribute('opacity', '1');
    });
    
    line.addEventListener('mouseleave', () => {
      line.setAttribute('stroke-width', '2');
      line.setAttribute('opacity', '0.8');
    });

    group.appendChild(line);

    return group;
  }


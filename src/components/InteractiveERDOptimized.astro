      }
    });

    diagramContainer.appendChild(controlsDiv);
    diagramContainer.appendChild(svg);

    // Add zoom functionality
    let currentScale = 1;
    const minScale = 0.3;
    const maxScale = 2;

    const zoomIn = () => {
      if (currentScale < maxScale) {
        currentScale = Math.min(maxScale, currentScale + 0.2);
        svg.style.transform = `scale(${currentScale})`;
        svg.style.transformOrigin = 'center center';
      }
    };

    const zoomOut = () => {
      if (currentScale > minScale) {
        currentScale = Math.max(minScale, currentScale - 0.2);
        svg.style.transform = `scale(${currentScale})`;
        svg.style.transformOrigin = 'center center';
      }
    };

    const zoomFit = () => {
      currentScale = 1;
      svg.style.transform = 'scale(1)';
      svg.style.transformOrigin = 'center center';
    };

    diagramContainer.querySelector(`#zoom-in-${containerId}`).addEventListener('click', zoomIn);
    diagramContainer.querySelector(`#zoom-out-${containerId}`).addEventListener('click', zoomOut);
    diagramContainer.querySelector(`#zoom-fit-${containerId}`).addEventListener('click', zoomFit);

    console.log('Diagram view created successfully');
    return diagramContainer;
    
    } catch (error) {

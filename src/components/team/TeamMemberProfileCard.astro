---
import OptimizedImage from '../OptimizedImage.astro';

interface Props {
  name: string;
  degree?: string;
  role?: string;
  image: string;
  email?: string;
  scholarLink?: string;
  linkedinLink?: string;
  githubLink?: string;
  websiteLink?: string;
  institution?: string;
  department?: string;
  biography?: string;
  research?: string[];
  orcidId?: string;
  twitterHandle?: string;
  size?: 'small' | 'medium' | 'large';
  expandable?: boolean;
}

const {
  name,
  degree,
  role,
  image,
  email,
  scholarLink,
  linkedinLink,
  githubLink,
  websiteLink,
  institution,
  department,
  biography,
  research,
  orcidId,
  twitterHandle,
  size = 'medium',
  expandable = false,
} = Astro.props;

const sizeClasses = {
  small: 'w-32 h-32',
  medium: 'w-40 h-40',
  large: 'w-48 h-48',
};

const fullName = degree ? `${name}, ${degree}` : name;
const primaryLink = scholarLink || linkedinLink || websiteLink;

// Check if image exists, use placeholder if not
const imagePath = `/images/headshots/${image}`;
const placeholderPath = '/images/headshots/placeholder.svg';

// Get initials for placeholder
const getInitials = (name: string) => {
  return name
    .split(' ')
    .map((part) => part.charAt(0))
    .join('')
    .toUpperCase();
};

const initials = getInitials(name);

// Determine which social links to show
const hasLinks =
  [scholarLink, linkedinLink, githubLink, websiteLink, email, orcidId, twitterHandle].filter(
    Boolean
  ).length > 0;

// Create unique ID for expandable content
const profileId = name.toLowerCase().replace(/\s+/g, '-');

// Generate a unique ID for this component instance
const uniqueId = `profile-${Math.random().toString(36).substring(2, 10)}`;
---

<div
  class={`team-member-card ${expandable ? 'expandable' : ''} transition-all duration-300 bg-white rounded-lg shadow-md hover:shadow-lg overflow-hidden`}
>
  <div class="p-5 flex flex-col md:flex-row items-center md:items-start gap-4">
    <!-- Profile Image -->
    <div class="flex-shrink-0">
      <div
        class={`relative rounded-full ${sizeClasses[size]} overflow-hidden bg-clif-burgundy flex items-center justify-center text-white font-bold shadow-md transition-all`}
      >
        <OptimizedImage
          src={imagePath}
          alt={name}
          class={`w-full h-full object-cover`}
          loading="lazy"
          width={size === 'large' ? 192 : size === 'medium' ? 160 : 128}
          height={size === 'large' ? 192 : size === 'medium' ? 160 : 128}
        />
        <div
          class="absolute inset-0 flex items-center justify-center text-white font-bold text-2xl bg-clif-burgundy opacity-0 fallback-initials"
        >
          {initials}
        </div>
      </div>
    </div>

    <!-- Profile Info -->
    <div class="flex flex-col items-center md:items-start text-center md:text-left flex-1">
      <h3
        class={`font-bold ${size === 'large' ? 'text-2xl' : size === 'medium' ? 'text-xl' : 'text-lg'} text-clif-burgundy`}
      >
        {fullName}
      </h3>

      {role && <p class="text-gray-700 font-medium mt-1">{role}</p>}

      {institution && <p class="text-gray-600 mt-0.5">{institution}</p>}
      {department && <p class="text-gray-600 mt-0.5">{department}</p>}

      {/* Brief bio preview if expandable */}
      {
        expandable && biography && (
          <p class="text-gray-600 mt-3 text-sm line-clamp-2">{biography}</p>
        )
      }

      {/* Social Links */}
      {
        hasLinks && (
          <div class="flex gap-3 mt-3 flex-wrap justify-center md:justify-start">
            {email && (
              <a href={`mailto:${email}`} class="social-link" aria-label={`Email ${name}`}>
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                </svg>
                <span class="sr-only md:not-sr-only md:ml-1 md:text-xs">Email</span>
              </a>
            )}

            {scholarLink && (
              <a
                href={scholarLink}
                class="social-link"
                aria-label={`${name}'s Google Scholar profile`}
                target="_blank"
                rel="noopener"
              >
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z" />
                </svg>
                <span class="sr-only md:not-sr-only md:ml-1 md:text-xs">Scholar</span>
              </a>
            )}

            {linkedinLink && (
              <a
                href={linkedinLink}
                class="social-link"
                aria-label={`${name}'s LinkedIn profile`}
                target="_blank"
                rel="noopener"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                </svg>
                <span class="sr-only md:not-sr-only md:ml-1 md:text-xs">LinkedIn</span>
              </a>
            )}

            {githubLink && (
              <a
                href={githubLink}
                class="social-link"
                aria-label={`${name}'s GitHub profile`}
                target="_blank"
                rel="noopener"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
                <span class="sr-only md:not-sr-only md:ml-1 md:text-xs">GitHub</span>
              </a>
            )}

            {websiteLink && (
              <a
                href={websiteLink}
                class="social-link"
                aria-label={`${name}'s personal website`}
                target="_blank"
                rel="noopener"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.56-.5-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.56.5.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.498-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z"
                    clip-rule="evenodd"
                  />
                </svg>
                <span class="sr-only md:not-sr-only md:ml-1 md:text-xs">Website</span>
              </a>
            )}

            {orcidId && (
              <a
                href={`https://orcid.org/${orcidId}`}
                class="social-link"
                aria-label={`${name}'s ORCID profile`}
                target="_blank"
                rel="noopener"
              >
                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zm.5 5.5a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3zm-1.5 5h3v9h-3v-9z" />
                </svg>
                <span class="sr-only md:not-sr-only md:ml-1 md:text-xs">ORCID</span>
              </a>
            )}

            {twitterHandle && (
              <a
                href={`https://twitter.com/${twitterHandle}`}
                class="social-link"
                aria-label={`${name}'s Twitter profile`}
                target="_blank"
                rel="noopener"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723 10.035 10.035 0 01-3.127 1.195 4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                </svg>
                <span class="sr-only md:not-sr-only md:ml-1 md:text-xs">Twitter</span>
              </a>
            )}
          </div>
        )
      }

      {
        expandable && (
          <button
            class="mt-4 text-clif-burgundy font-medium text-sm flex items-center expand-button"
            data-target={uniqueId}
          >
            <span>View Profile</span>
            <svg
              class="w-4 h-4 ml-1 transform transition-transform"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </button>
        )
      }
    </div>
  </div>

  {/* Expandable Content */}
  {
    expandable && (
      <div class="hidden border-t border-gray-100 p-5 profile-details" id={uniqueId}>
        {biography && (
          <div class="mb-4">
            <h4 class="text-lg font-semibold mb-2">Biography</h4>
            <p class="text-gray-700">{biography}</p>
          </div>
        )}

        {research && research.length > 0 && (
          <div class="mb-4">
            <h4 class="text-lg font-semibold mb-2">Research Interests</h4>
            <ul class="list-disc list-inside text-gray-700">
              {research.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        )}
      </div>
    )
  }
</div>

<style>
  /* Show initials when image fails to load */
  img:not([src]),
  img[src=''],
  img.error {
    display: none;
  }

  img:not([src]) ~ .fallback-initials,
  img[src=''] ~ .fallback-initials,
  img.error ~ .fallback-initials {
    opacity: 1 !important;
  }

  .social-link {
    @apply flex items-center text-gray-600 hover:text-clif-burgundy transition-colors;
  }

  .team-member-card {
    @apply transition-all duration-300;
  }
</style>

<script define:vars={{ expandable }}>
  if (expandable) {
    document.addEventListener('DOMContentLoaded', () => {
      const expandButtons = document.querySelectorAll('.expand-button');

      expandButtons.forEach((button) => {
        button.addEventListener('click', () => {
          const targetId = button.getAttribute('data-target');
          const detailsEl = document.getElementById(targetId);

          if (detailsEl) {
            // Toggle visibility
            if (detailsEl.classList.contains('hidden')) {
              detailsEl.classList.remove('hidden');
              button.querySelector('svg').classList.add('rotate-180');
              button.querySelector('span').textContent = 'Hide Profile';
            } else {
              detailsEl.classList.add('hidden');
              button.querySelector('svg').classList.remove('rotate-180');
              button.querySelector('span').textContent = 'View Profile';
            }
          }
        });
      });
    });
  }
</script>

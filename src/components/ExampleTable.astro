---
// ExampleTable.astro
export interface Props {
  headers: string[];
  rows: string[][];
}
const { headers, rows } = Astro.props;
---
<div class="table-wrapper overflow-x-auto rounded-lg shadow-sm border border-gray-200 my-6">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50 sticky top-0 z-10">
      <tr>
        {headers.map(header => (
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider bg-gray-50" scope="col">{header}</th>
        ))}
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      {rows.map(row => (
        <tr>
          {row.map(cell => (
            <td class="px-6 py-4 text-sm text-gray-900">{cell}</td>
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div> 
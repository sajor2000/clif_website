  function updateSelectedSites() {
    const checkboxes = document.querySelectorAll('.site-checkbox:not(#site-all)');
    selectedSites = Array.from(checkboxes)
      .filter(cb => cb.checked)
      .map(cb => cb.value);

    const siteAll = document.getElementById('site-all');

---
// src/components/layout/Navigation.astro
const pathname = Astro.url.pathname;

const navItems = [
  { label: 'Home', href: '/', active: pathname === '/' },
  {
    label: 'About',
    href: '/about',
    active: ['/about', '/mission', '/team'].includes(pathname),
    submenu: [
      { label: 'Mission', href: '/mission', active: pathname === '/mission' },
      { label: 'Team', href: '/team', active: pathname === '/team' },
    ],
  },
  { label: 'Cohort', href: '/cohort', active: pathname === '/cohort' },
  { label: 'Projects', href: '/projects', active: pathname === '/projects' },
  { label: 'Tools', href: '/tools', active: pathname === '/tools' },
  {
    label: 'Data Dictionary',
    href: '/data-dictionary',
    active: pathname.startsWith('/data-dictionary'),
  },
  {
    label: 'ETL Guide',
    href: '/etl-guide',
    active: pathname === '/etl-guide',
  },
  { label: 'FAQ', href: '/faq', active: pathname === '/faq' },
];
---

<nav class="hidden md:flex items-center gap-8" aria-label="Main navigation">
  {
    navItems.map((item) => (
      <div class="relative group">
        <a
          href={item.href}
          class={`text-sm font-medium transition-colors duration-200 hover:text-clif-burgundy ${item.active && !item.submenu ? 'text-clif-burgundy' : 'text-gray-700'}`}
          aria-current={item.active && !item.submenu ? 'page' : undefined}
        >
          {item.label}
        </a>

        {item.submenu && (
          <div class="absolute left-0 top-full mt-0 w-48 bg-white rounded-lg shadow-lg hidden group-hover:block z-20">
            {
              item.submenu.map((sub) => (
                <a
                  href={sub.href}
                  class={`block px-4 py-2 text-sm hover:bg-gray-50 ${sub.active ? 'text-clif-burgundy font-semibold' : 'text-gray-700'}`}
                >
                  {sub.label}
                </a>
              ))
            }
          </div>
        )}
      </div>
    ))
  }

  <!-- Inline Search -->
  <div class="relative">
    <div class="flex items-center border border-gray-300 rounded-lg px-3 py-1.5 focus-within:border-clif-burgundy focus-within:ring-1 focus-within:ring-clif-burgundy transition-colors">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-gray-400 shrink-0"
        aria-hidden="true"
      >
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.3-4.3"></path>
      </svg>
      <input
        type="text"
        id="search-input"
        class="w-48 text-sm text-gray-900 placeholder-gray-400 focus:outline-none bg-transparent ml-2"
        placeholder="Search..."
        autocomplete="off"
      />
    </div>

    <!-- Search Results Dropdown -->
    <div
      id="search-results"
      class="hidden absolute right-0 top-full mt-2 w-72 bg-white rounded-lg shadow-lg border border-gray-200 max-h-80 overflow-y-auto z-50"
    >
    </div>
  </div>
</nav>


<!-- Mobile Navigation -->
<div class="md:hidden flex items-center gap-3">
  <!-- Mobile Search -->
  <div class="relative">
    <div class="flex items-center border border-gray-300 rounded-lg px-2 py-1 focus-within:border-clif-burgundy">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-gray-400 shrink-0"
        aria-hidden="true"
      >
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.3-4.3"></path>
      </svg>
      <input
        type="text"
        id="mobile-search-input"
        class="w-24 text-sm text-gray-900 placeholder-gray-400 focus:outline-none bg-transparent ml-1.5"
        placeholder="Search..."
        autocomplete="off"
      />
    </div>
    <!-- Mobile Search Results -->
    <div
      id="mobile-search-results"
      class="hidden absolute right-0 top-full mt-2 w-64 bg-white rounded-lg shadow-lg border border-gray-200 max-h-60 overflow-y-auto z-50"
    >
    </div>
  </div>

  <button
    id="mobile-menu-button"
    class="text-gray-700 hover:text-clif-burgundy"
    aria-label="Open menu"
    aria-expanded="false"
    aria-controls="mobile-menu"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      aria-hidden="true"
    >
      <line x1="4" x2="20" y1="12" y2="12"></line>
      <line x1="4" x2="20" y1="6" y2="6"></line>
      <line x1="4" x2="20" y1="18" y2="18"></line>
    </svg>
  </button>

  <div
    id="mobile-menu"
    class="hidden fixed inset-0 bg-white z-50 p-6"
    role="dialog"
    aria-modal="true"
    aria-labelledby="mobile-menu-heading"
  >
    <div class="flex justify-between items-center mb-8">
      <h2 id="mobile-menu-heading" class="sr-only">Navigation menu</h2>
      <button
        id="mobile-menu-close"
        class="text-gray-700 hover:text-clif-burgundy ml-auto"
        aria-label="Close menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          aria-hidden="true"
        >
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <nav class="flex flex-col gap-6" aria-label="Mobile navigation">
      {
        navItems.map((item) => (
          !item.submenu ? (
            <a
              href={item.href}
              class={`text-lg font-medium transition-colors duration-200 hover:text-clif-burgundy ${item.active ? 'text-clif-burgundy' : 'text-gray-700'}`}
            >
              {item.label}
            </a>
          ) : (
            <details class="border-t first:border-none">
              <summary class="py-3 flex items-center justify-between cursor-pointer">
                <span class={`text-lg font-medium ${item.active ? 'text-clif-burgundy' : 'text-gray-700'}`}>{item.label}</span>
                <svg class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 011.08 1.04l-4.25 4.25a.75.75 0 01-1.06 0L5.25 8.27a.75.75 0 01-.02-1.06z" clip-rule="evenodd"/></svg>
              </summary>
              {
                item.submenu.map((sub) => (
                  <a
                    href={sub.href}
                    class={`block pl-6 py-2 text-base ${sub.active ? 'text-clif-burgundy font-semibold' : 'text-gray-700'}`}
                  >
                    {sub.label}
                  </a>
                ))
              }
            </details>
          )
        ))
      }
    </nav>
  </div>
</div>

<script is:inline>
  document.addEventListener('DOMContentLoaded', async function() {
    // Mobile menu functionality
    var mobileMenuButton = document.getElementById('mobile-menu-button');
    var mobileMenuClose = document.getElementById('mobile-menu-close');
    var mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuButton) {
      mobileMenuButton.addEventListener('click', function() {
        if (mobileMenu) mobileMenu.classList.remove('hidden');
        mobileMenuButton.setAttribute('aria-expanded', 'true');
        document.body.style.overflow = 'hidden';
      });
    }

    if (mobileMenuClose) {
      mobileMenuClose.addEventListener('click', function() {
        if (mobileMenu) mobileMenu.classList.add('hidden');
        if (mobileMenuButton) mobileMenuButton.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';
      });
    }

    // Pagefind search functionality
    var searchInput = document.getElementById('search-input');
    var searchResults = document.getElementById('search-results');
    var mobileSearchInput = document.getElementById('mobile-search-input');
    var mobileSearchResults = document.getElementById('mobile-search-results');

    var pagefind = null;
    var debounceTimer;

    // Load Pagefind on first interaction (dynamically at runtime)
    async function loadPagefind() {
      if (pagefind) return pagefind;
      try {
        pagefind = await import('/pagefind/pagefind.js');
        await pagefind.init();
        return pagefind;
      } catch (e) {
        console.warn('Pagefind not available (run npm run build to generate search index)');
        return null;
      }
    }

    async function performSearch(query, resultsEl) {
      if (!resultsEl) return;

      if (!query.trim()) {
        resultsEl.classList.add('hidden');
        return;
      }

      var pf = await loadPagefind();
      if (!pf) {
        resultsEl.innerHTML = '<p class="px-3 py-2 text-sm text-gray-500">Search unavailable in dev mode. Run build first.</p>';
        resultsEl.classList.remove('hidden');
        return;
      }

      var search = await pf.search(query);

      if (search.results.length === 0) {
        resultsEl.innerHTML = '<p class="px-3 py-2 text-sm text-gray-500">No results found.</p>';
        resultsEl.classList.remove('hidden');
        return;
      }

      // Load the first 5 results
      var results = await Promise.all(
        search.results.slice(0, 5).map(function(r) { return r.data(); })
      );

      resultsEl.innerHTML = results.map(function(result) {
        return '<a href="' + result.url + '" class="block px-3 py-2 hover:bg-gray-100 transition-colors first:rounded-t-lg last:rounded-b-lg">' +
          '<div class="font-medium text-gray-900 text-sm">' + (result.meta?.title || 'Untitled') + '</div>' +
          '<div class="text-xs text-gray-500 line-clamp-2">' + (result.excerpt || '') + '</div>' +
        '</a>';
      }).join('');
      resultsEl.classList.remove('hidden');
    }

    // Debounced search for desktop
    if (searchInput) {
      searchInput.addEventListener('input', function(e) {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(function() {
          performSearch(e.target.value, searchResults);
        }, 200);
      });
    }

    // Debounced search for mobile
    if (mobileSearchInput) {
      mobileSearchInput.addEventListener('input', function(e) {
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(function() {
          performSearch(e.target.value, mobileSearchResults);
        }, 200);
      });
    }

    // Close results when clicking outside
    document.addEventListener('click', function(e) {
      var target = e.target;
      if (!target.closest('#search-input') && !target.closest('#search-results')) {
        if (searchResults) searchResults.classList.add('hidden');
      }
      if (!target.closest('#mobile-search-input') && !target.closest('#mobile-search-results')) {
        if (mobileSearchResults) mobileSearchResults.classList.add('hidden');
      }
    });
  });
</script>
